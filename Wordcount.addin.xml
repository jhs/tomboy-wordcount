<Addin id="WordcountAddin"
	namespace="Tomboy"
	name="Wordcount"
	author="Jason Smith <jhs@proven-corporation.com>"
        description="Show the size of the text in your notes."
	category="Tools"
	defaultEnabled="true"
	version="0.1">

	<Runtime>
		<Import assembly="Wordcount.dll" />
	</Runtime>

	<Dependencies>
		<Addin id="Tomboy" version="0.10" />
	</Dependencies>

	<Extension path="/Tomboy/NoteAddins">
		<NoteAddin type="Tomboy.Wordcount.WordcountNoteAddin" />
	</Extension>
</Addin>
